<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="au.net.winehound.ui.fragments.MainFragment_"
            />

        <fragment
            android:id="@+id/about_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="au.net.winehound.ui.fragments.AboutFragment_"/>

        <fragment
            android:id="@+id/settings_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="au.net.winehound.ui.fragments.SettingsFragment_"/>

        <fragment
            android:id="@+id/trade_events_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="au.net.winehound.ui.fragments.TradeEventsFragment_"/>

    </FrameLayout>

    <!-- The navigation drawer -->
    <FrameLayout
        android:id="@+id/main_left_drawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="au.net.winehound.ui.fragments.DrawerFragment_"/>
    </FrameLayout>

</android.support.v4.widget.DrawerLayout>