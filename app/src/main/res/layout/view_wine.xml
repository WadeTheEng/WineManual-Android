<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/wine_image"
        android:src="@drawable/wine_bottle_dotted"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/padding_medium"
        android:adjustViewBounds="false"
        android:scaleType="centerInside" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <au.net.winehound.ui.views.edmondsans.EdmondSansTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="2011 Really Tasty Sharaz"
                android:id="@+id/wine_name"
                android:layout_gravity="center_vertical"/>


            <ImageView
                android:id="@+id/wine_favourite_button"
                android:layout_width="@dimen/title_height"
                android:layout_height="@dimen/title_height"
                android:src="@drawable/favourite_icon_red_norm"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:layout_gravity="top"/>

        </LinearLayout>

        <au.net.winehound.ui.views.edmondsans.EdmondSansTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In semper semper enim, nec egestas tortor laoreet sed. Quisque dictum convallis erat, in condimentum mauris dapibus quis. Ut condimentum est est, non luctus nisl fringilla id. Nullam iaculis ultricies dignissim. In et urna justo. Praesent sit amet bibendum urna, non pellentesque tellus. Aliquam commodo nisl ac leo interdum ullamcorper. Curabitur facilisis ut augue vel congue. Praesent non sapien quis eros gravida ullamcorper at vitae ante. Proin felis enim, lacinia sit amet commodo nec, luctus et lorem. Suspendisse non malesuada orci."
            android:id="@+id/wine_description"/>
    </LinearLayout>
</LinearLayout>